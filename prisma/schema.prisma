generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Voice {
  id              String   @id @default(cuid())
  name            String
  email           String   @unique
  languages       String   // JSON array stored as string
  styles          String   // JSON array stored as string
  pricePerHour    Int      // cents (15000 = $150)
  audioSamplePath String
  description     String
  gender          String   // "male" | "female" | "non-binary"
  avatarUrl       String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
